<html>
    <head>
        <script src="furet-ui/js/vue.js"></script>
        <script src="furet-ui/js/vuex.js"></script>
        <script src="furet-ui/js/brython_dist.js"></script>

        {% for stylesheet in stylesheets %}
        <link rel="stylesheet" media="screen" href="{{ stylesheet }}">
        {% endfor %}
    
        {% if theme %}
        <link rel="stylesheet" media="screen" href="{{ theme }}">
        {% endif %}
    </head>
    <body onload="brython({{ debug_level }});">
        {% for id, content in templates.items() %}
          <script type="x-template" id="{{ id }}">
            {{ content }}
          </script>
        {% endfor %}
    
        <div id="app">
          <img style="display: block; margin: auto;"
               src="/furetui/static/images/loading.gif"
               height="50%">
        </div>

        {% for script in scripts %}
          <script src="{{ script }}"></script>
        {% endfor %}

        {% for component in components %}
          <script type="text/python" src="{{ component }}"></script>
        {% endfor %}

        <script type="text/python" src="/furetui/static/app.py"></script>
    </body>
</html>
